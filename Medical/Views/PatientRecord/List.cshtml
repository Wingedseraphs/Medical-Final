@model IEnumerable<Medical.ViewModels.CaseRecordViewModel>

@{
    ViewData["Title"] = "List";

}
<!-- Hero Start -->
<div class="container-fluid bg-primary py-5 hero-header mb-5">
    <div class="row py-3">
        <div class="col-12 text-center">
            <h3 class="display-3 text-white animated zoomIn">病歷紀錄</h3>
        </div>
    </div>
</div>
<!-- Hero End -->
@using (Html.BeginForm())
{
    @:醫生查詢 @Html.TextBox("txtKeyword")
    <input type="submit" value="查詢" class="btn btn-primary" />
}

<table class="table table-sm align-middle table-hover" style="margin-bottom:100px">
    <thead>
        <tr>
            <th>
                序
            </th>
            <th>
                看診醫生
            </th>
            <th>
                病例概況
            </th>
            <th>
                詳細病情
            </th>
            <th>
                治療科目
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;

            foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Doctor.DoctorName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiagnosticRecord)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.SyndromeDescription)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.TreatmentDetail.TreatmentDetail1)
                    </td>
                    <td>
                        @Html.ActionLink("評論", "Create", new { id = item.Doctor.DoctorId })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
