@model Medical.ViewModel.AArticleViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Admin_Layout.cshtml";
}

<style>

    .card {
        margin-left: 20px;
    }

        .card div {
            margin-left: 20px;
        }

    .form-group select {
        border: 2px solid gold;
        border-radius: 10px;
    }

    .form-group .form-control {
        border: 2px solid gold;
        border-radius: 10px;
    }

    .form-group textarea {
        border: 2px solid gold;
        border-radius: 10px;
